@using EntityLayer.Concrete
@model List<Team>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Takım Üyeleri</h4>
                  <div class="table-responsive">
                @if(Model.Count==0)
                {
                <div class="alert alert-danger" role="alert">
                    <strong>Uyarı!</strong> Sisteminizde kayıtlı herhangi bir personel bulunmuyor.
                </div>
                <div class="alert alert-info" role="alert">
                    <strong>Uyarı!</strong> Lütfen Personel Girişi Yapın...
                </div>
                }
                else
                {
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <td>#</td>
                                <td>ID</td>
                                <td>Ad</td>
                                <td>Görev</td>
                                <td>Sil</td>
                                <td>Düzenle</td>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="py-1">
                                        <img src="@item.ImageUrl" alt="image" />
                                    </td>
                                    <td>@item.TeamID</td>
                                    <td>@item.PersonName</td>
                                    <td>@item.Title</td>
                                    <td><a href="/Team/deleteTeam/@item.TeamID" class="btn btn-github">Sil</a></td>
                                    <td><a href="/Team/updateTeam/@item.TeamID" class="btn btn-inverse-primary">Düzenle</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                <a href="/Team/addTeam/" class="btn btn-dribbble">Personel Girişi</a>
                  </div>
                </div>
              </div>
            </div>

