@using EntityLayer.Concrete
@model List<Contact>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Mesaj Listeniz</h4>
            <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <td>#</td>
                                <td>Ad Soyad</td>
                                <td>Mail</td>
                                <td>Tarih</td>
                                <td>Mesajı Gör</td>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="py-1">
                                        <img src="~/MajesticAdmin-Free-Bootstrap-Admin-Template-master/template/images/faces/face1.jpg" alt="image" />
                                    </td>
                                    <td>@item.ContactId</td>
                                    <td>@item.Name</td>
                                    <td>@item.Mail</td>
                                    <td>@item.Date</td>
                                    <td><a href="/Contact/messageDetails/@item.ContactId" class="btn btn-inverse-primary">Mesaj Detayları</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
            </div>
        </div>
    </div>
</div>


