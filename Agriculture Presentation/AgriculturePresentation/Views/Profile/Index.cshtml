@model AgriculturePresentation.Models.UserEditViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Profilinizi Güncelleyin</h4>
            <form class="forms-sample" method="post">
                <div class="form-group">
                    <label>Mail</label>
                    <input type="text" class="form-control" id="exampleInputMail" placeholder="Mail Adresiniz" asp-for="Mail">
                </div>
                <div class="form-group">
                    <label>Telefon Numaranız</label>
                    <input type="text" class="form-control" id="exampleInputPhoneNumber" placeholder="Telefon Numarası" asp-for="phoneNumber">
                </div>
                <div class="form-group">
                    <label>Şifre</label>
                    <input type="text" class="form-control" id="exampleInputPassword" placeholder="Şifre Girişi" asp-for="password">
                </div>
                <div class="form-group">
                    <label>Tekrar Şifre</label>
                    <input type="text" class="form-control" id="exampleInputPasswordConfirm" placeholder="Şifrenizi Tekrar Girin" asp-for="passwordConfirm">
                </div>
                <button type="submit" class="btn btn-outline-primary">Kaydet</button>
            </form>
        </div>
    </div>
</div>

