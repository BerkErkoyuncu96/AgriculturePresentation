@using EntityLayer.Concrete
@model List<Admin>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}




<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Admin Listesi</h4>
            <div class="table-responsive pt-3">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <td>#</td>
                            <td>Kullanıcı Adı</td>
                            <td>Sil</td>
                            <td>Düzenle</td>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.AdminID</td>
                                <td>@item.Username</td>
                                <td> <a href="/Admin/deleteAdmin/@item.AdminID" class="btn btn-outline-primary">Sil</a></td>
                                <td> <a href="/Admin/updateAdmin/@item.AdminID" class="btn btn-outline-primary">Düzenle</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
                <a href="/Admin/addAdmin/" class="btn btn-outline-info">Yeni Admin Girişi</a>
            </div>
        </div>
    </div>
</div>



